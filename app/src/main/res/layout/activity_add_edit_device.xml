<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Station.AddEditDeviceActivity"
    android:id="@+id/add_edit_device_root"
    android:background="@drawable/background">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device Name * :"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:layout_margin="1dp"
        android:padding="4dp"
        android:textStyle="bold"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/edit_text_device_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Device Name"
        android:background="#FFFFFF"
        android:padding="5dp"
        android:layout_marginLeft="4dp"
        android:inputType="text" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Id * :"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:layout_margin="1dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:textSize="18dp"
            />
    <EditText
        android:id="@+id/edit_text_device_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Device Id"
        android:background="#FFFFFF"
        android:padding="5dp"
        android:layout_marginLeft="4dp"
        android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NA:"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:layout_margin="1dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/edit_text_wifi_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NA"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:layout_marginLeft="4dp"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local Host"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:layout_margin="1dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/edit_localHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="#FFFFFF"
            android:hint="192.168.29.159"
            android:inputType="text"
            android:padding="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Firebase Host * :"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:layout_margin="1dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/edit_text_fb_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="If entered, This will override the default Firebase Host"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:textSize="15dp"
            android:textStyle="italic"
            android:layout_marginLeft="4dp"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Firebase Auth * :"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:layout_margin="1dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/edit_text_fb_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="If entered, This will override the default Firebase Auth"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:layout_marginLeft="4dp"
            android:textSize="15dp"
            android:textStyle="italic"
            android:inputType="text" />
    </LinearLayout>
</LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>